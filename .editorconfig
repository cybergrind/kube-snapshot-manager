root = true

[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 100

[**.py]
indent_style = space
indent_size = 4
emacs_py_project = backend/
emacs_py_ruff_formatting = true

[frontend/**.{js,jsx,ts,tsx,svelte}]
indent_style = space
indent_size = 2
js_formatter = prettier


[Makefile]
indent_style = tab
